<div class="row p-1 p-md-4">
    <div class="p-1 p-md-4 mt-2 mt-md-0 col-md-8 col-12 order-md-1 order-2">
        <style>
            @media (max-width: 768px) {
                #myTable {
                    font-size: 12px;
                    width: 100%;
                    display: block;
                    overflow-x: auto;
                    white-space: nowrap;
                }
            }
        </style>
        <div class="table-responsive">
            <table id="myTable" class="table table-striped align-middle">
                <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Periode</th>
                    <th scope="col">Nilai</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% let no = 1; %>
                <% data.forEach(e => { %>
                    <tr>
                        <th scope="row"><%= no %></th>
                        <td><%= e.periode %></td>
                        <td><%= e.nilai %></td>
                        <td>
                            <script>
                                function editPeriode(id, periode, nilai) {
                                    document.getElementById("periode").value = periode;
                                    document.getElementById("nilai").value = nilai;
                                    document.querySelector("form").action = "/updatePeriode/" + id;
                                }
                            </script>
                            <a
                                    href="javascript:void(0)"
                                    class="btn btn-sm btn-primary"
                                    onclick="editPeriode('<%= e.id %>', '<%= e.periode %>', '<%= e.nilai %>')"
                            ><i class="bi bi-pencil-fill"></i
                                ></a>
                            <a
                                    href="#"
                                    class="btn btn-sm btn-danger text-white"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deletePeriodeModal"
                                    data-periode-id="<%= e.id %>"
                                    data-periode-name="<%= e.periode %>"
                            >
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    </tr>
                    <% no++; %>
                <% }); %>
                </tbody>
            </table>

            <!-- Reusable Delete Modal -->
            <div class="modal fade" id="deletePeriodeModal" tabindex="-1" aria-labelledby="deletePeriodeModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deletePeriodeModalLabel">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this periode: <strong id="deletePeriodeName"></strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <a id="deletePeriodeLink" href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="p-1 p-md-4 mt-2 mt-md-0 col-md-4 col-12 order-md-2 order-1">
        <h3>Tambah Instrument</h3>
        <form action="/addPeriode" method="post">
            <div class="P-2">
                <label for="periode" class="form-label">Periode:</label>
                <input
                        type="text"
                        class="form-control form-control-sm"
                        id="periode"
                        name="periode"
                        required
                />
            </div>
            <div class="P-2">
                <label for="nilai" class="form-label">Nilai:</label>
                <input
                        type="number"
                        class="form-control form-control-sm"
                        id="nilai"
                        name="nilai"
                        required
                />
            </div>
            <div class="py-2">
                <button type="button" class="btn btn-sm btn-danger text-white" onclick="clearForm()"><i class="bi bi-x-circle px-1"></i>Clear</button>
                <button type="submit" class="btn btn-sm btn-success text-white"><i class="bi bi-floppy px-1"></i> Simpan</button>
            </div>
        </form>
        <script>
            function clearForm() {
                document.getElementById("periode").value = "";
                document.getElementById("nilai").value = "";
            }
        </script>
    </div>
    <script>
        $(document).ready(function () {
            $("#myTable").DataTable({
                responsive: true,
            });
        });
    </script>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteModal = document.getElementById('deletePeriodeModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const periodeId = button.getAttribute('data-periode-id');
            const periodeName = button.getAttribute('data-periode-name');

            const modalName = deleteModal.querySelector('#deletePeriodeName');
            const deleteLink = deleteModal.querySelector('#deletePeriodeLink');

            modalName.textContent = periodeName;
            deleteLink.setAttribute('href', '/deletePeriode/' + periodeId);
        });
    });
</script>