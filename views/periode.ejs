<div class="container card p-4">
  <%- include('./components/button-go-back.ejs') %>
<h3>Data Periode Instument</h3>

<form action="/addPeriode" method="post" class="row g-3">
  <div class="col-md-6">
    <label for="periode" class="form-label">Periode:</label>
    <input
      type="text"
      class="form-control"
      id="periode"
      name="periode"
      required
    />
  </div>
  <div class="col-md-6">
    <label for="nilai" class="form-label">Nilai:</label>
    <input
      type="number"
      class="form-control"
      id="nilai"
      name="nilai"
      required
    />
  </div>
  <div class="col-12">
    <button type="button" class="btn btn-secondary" onclick="clearForm()">
      Clear
    </button>
    <script>
      function clearForm() {
        document.getElementById("periode").value = "";
        document.getElementById("nilai").value = "";
      }
    </script>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>

<div class="container card p-4 mt-5">
  <style>
    @media (max-width: 768px) {
      #myTable {
        font-size: 12px;
        width: 100%;
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
    }
  </style>
  <table id="myTable" class="table display responsive" style="width: 100%;">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Periode</th>
        <th scope="col">Nilai</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% let no = 1; %> <% data.forEach(e => { %>
      <tr>
        <th scope="row"><%= no %></th>
        <td><%= e.periode %></td>
        <td><%= e.nilai %></td>
        <td>
          <script>
            function editPeriode(id, periode, nilai) {
              document.getElementById("periode").value = periode;
              document.getElementById("nilai").value = nilai;
              document.querySelector("form").action = "/updatePeriode/" + id;
            }
          </script>
          <a
            href="javascript:void(0)"
            class="btn btn-sm btn-outline-primary"
            onclick="editPeriode('<%= e.id %>', '<%= e.periode %>', '<%= e.nilai %>')"
            ><i class="bi bi-pencil-fill"></i
          ></a>
          <a
            href="#"
            class="btn btn-sm btn-outline-danger"
            data-bs-toggle="modal"
            data-bs-target="#deleteModal<%= e.id %>"
          >
            <i class="bi bi-trash3-fill"></i>
          </a>
          <div
            class="modal fade"
            id="deleteModal<%= e.id %>"
            tabindex="-1"
            aria-labelledby="deleteModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteModalLabel">
                    Confirm Delete
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete this periode?
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <a href="/deletePeriode/<%= e.id %>" class="btn btn-danger"
                    >Delete</a
                  >
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% no++ %> <% }) %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function () {
    $("#myTable").DataTable({
      responsive: true,
    });
  });
</script>
