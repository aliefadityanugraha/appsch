<div class="row p-1 p-md-4">
    <div class="p-1 p-md-4 mt-2 mt-md-0 col-md-8 col-12 order-md-1 order-2">
        <style>
            @media (max-width: 768px) {
                #myTable {
                    font-size: 12px;
                    width: 100%;
                    display: block;
                    overflow-x: auto;
                    white-space: nowrap;
                }
            }
        </style>
        <div class="table-responsive">
            <table id="myTable" class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>Deskripsi</th>
                        <th>Periode</th>
                        <th>Nilai</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let no = 1; %>
                    <% data.forEach(e => { %>
                        <tr>
                            <td><%= no %></td>
                            <td><%= e.description || '' %></td>
                            <td><%= e.periode.periode %></td>
                            <td><%= e.value || '' %></td>
                            <td>
                                <script>
                                    function editTask(id, description, value, periode) {
                                        document.getElementById("description").value = description;
                                        document.getElementById("value").value = value;
                                        document.getElementById("periode").value = periode;
                                        document.querySelector("form").action = "/updateTask/" + id;
                                    }
                                </script>
                                <a href="javascript:void(0)" class="btn btn-sm btn-primary my-2"
                                   onclick="editTask('<%= e.id %>', `<%- (e.description || '').replace(/'/g, '\&#39;') %>`, `<%- (e.value || '') %>`, '<%= e.periodeId %>')">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-danger my-2 text-white" data-bs-toggle="modal" data-bs-target="#deleteModal<%= e.id %>">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>
                                <div class="modal fade" id="deleteModal<%= e.id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">Are you sure you want to delete this task?</div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-sm btn-secondary text-white" data-bs-dismiss="modal">Cancel</button>
                                                <a href="/deleteTask/<%= e.id %>/<%= staff[0].id %>" class="btn btn-sm btn-danger text-white">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% no++ %>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <script>
            $(document).ready(function () {
                $("#myTable").DataTable({ responsive: true });
            });
        </script>
    </div>
    <div class="p-1 p-md-4 mt-2 mt-md-0 col-md-4 col-12 order-md-2 order-1">
        <h3>Tambah tugas untuk <%= staff[0].name %></h3>
        <p>Staff ID : <%= staff[0].id %></p>
        <% const nilai = data.reduce((acc, e) => acc + e.value, 0) %>
        <p>Presentase Nilai : <%= Math.round(nilai * 100 / 100) %>%</p>
        <form action="/addTask" method="post" class="mt-4">
            <input type="hidden" id="id" name="id" value="<%= id %>" required/>
            <div class="mb-3">
                <label for="description" class="form-label">Deskripsi Task:</label>
                <textarea id="description" name="description" class="form-control form-control-sm" required rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="periode" class="form-label">Instrumen:</label>
                <select id="periode" name="periode" class="form-select form-select-sm" required>
                    <% periodeData.forEach(e => { %>
                        <option value="<%= e.id %>"><%= e.periode %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label for="value" class="form-label">Nilai:</label>
                <input type="number" id="value" name="value" class="form-control form-control-sm" required min="0" max="100" />
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-sm btn-danger text-white" onclick="clearForm()"><i class="bi bi-x-circle px-1"></i>Clear</button>
                <button type="submit" class="btn btn-sm btn-success text-white"><i class="bi bi-floppy px-1"></i> Simpan</button>
            </div>
        </form>
        <script>
            function clearForm() {
                document.getElementById("description").value = "";
                document.getElementById("value").value = "";
                document.querySelector("form").action = "/addTask";
            }
        </script>
    </div>
</div>