<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | TUKIN SMATAJAYA</title>
    <link rel="apple-touch-icon" sizes="76x76" href="/public/img/logo-smata.png"/>
    <link rel="icon" type="image/png" href="/public/img/logo-smata.png"/>
    <meta name="description" content="TUKIN SMATAJAYA">
    <link rel="stylesheet" href="/public/sass/output.css">
    <script src="/public/js/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="/public/dist/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  </head>
  <body class="modern-body">
    <%- include('../components/navbar.ejs') %> 
    <div class="main-content">
        <div class="modern-container">
            <link rel="stylesheet" href="/public/css/datatables.min.css">
            <link rel="stylesheet" href="/public/css/dataTables.bootstrap.css">
            <script src="/public/js/datatables.min.js"></script>
            <script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.js"></script>
            <div class="content-wrapper">
                <%- body %>
            </div>
        </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
          <div class="modal-header modern-modal-header error-header">
            <h5 class="modal-title" id="errorModalLabel">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>Error
            </h5>
            <button type="button" class="btn-close modern-modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body modern-modal-body">
            <div id="errorMessage"></div>
            <div id="errorDetails" class="mt-3" style="display: none;">
              <hr class="modern-divider">
              <h6>Details:</h6>
              <pre class="text-muted small modern-pre"></pre>
            </div>
          </div>
          <div class="modal-footer modern-modal-footer">
            <button type="button" class="btn modern-btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
          <div class="modal-header modern-modal-header success-header">
            <h5 class="modal-title" id="successModalLabel">
              <i class="bi bi-check-circle-fill me-2"></i>Success
            </h5>
            <button type="button" class="btn-close modern-modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body modern-modal-body">
            <div id="successMessage"></div>
          </div>
          <div class="modal-footer modern-modal-footer">
            <button type="button" class="btn modern-btn-success" data-bs-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Warning Modal -->
    <div class="modal fade" id="warningModal" tabindex="-1" aria-labelledby="warningModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
          <div class="modal-header modern-modal-header warning-header">
            <h5 class="modal-title" id="warningModalLabel">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>Warning
            </h5>
            <button type="button" class="btn-close modern-modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body modern-modal-body">
            <div id="warningMessage"></div>
          </div>
          <div class="modal-footer modern-modal-footer">
            <button type="button" class="btn modern-btn-warning" data-bs-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Function to show error modal
      function showErrorModal(message, details = null) {
        document.getElementById('errorMessage').innerHTML = message;
        if (details) {
          document.getElementById('errorDetails').style.display = 'block';
          document.getElementById('errorDetails').querySelector('pre').textContent = details;
        } else {
          document.getElementById('errorDetails').style.display = 'none';
        }
        new bootstrap.Modal(document.getElementById('errorModal')).show();
      }

      // Function to show success modal
      function showSuccessModal(message) {
        document.getElementById('successMessage').innerHTML = message;
        new bootstrap.Modal(document.getElementById('successModal')).show();
      }

      // Function to show warning modal
      function showWarningModal(message) {
        document.getElementById('warningMessage').innerHTML = message;
        new bootstrap.Modal(document.getElementById('warningModal')).show();
      }

      // Check for flash messages and show appropriate modal
      document.addEventListener('DOMContentLoaded', function() {
        <% if (typeof messages !== 'undefined' && messages.error) { %>
          showErrorModal(<%- JSON.stringify(messages.error) %>);
        <% } %>
        <% if (typeof messages !== 'undefined' && messages.success) { %>
          showSuccessModal(<%- JSON.stringify(messages.success) %>);
        <% } %>
        <% if (typeof messages !== 'undefined' && messages.warning) { %>
          showWarningModal(<%- JSON.stringify(messages.warning) %>);
        <% } %>
      });
    </script>

    <style>
    /* Global Box Sizing */
    *, *::before, *::after {
        box-sizing: border-box;
    }
    
    /* Modern Body Styles */
    .modern-body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .main-content {
        padding-top: 20px;
        min-height: calc(100vh - 80px);
        width: 100%;
        overflow-x: hidden;
    }

    .modern-container {
         padding: 25px;
         width: 100%;
         margin: 0;
         box-sizing: border-box;
     }

    .content-wrapper {
         background: rgba(255, 255, 255, 0.95);
         border-radius: 20px;
         padding: 30px;
         box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
         backdrop-filter: blur(10px);
         border: 1px solid rgba(255, 255, 255, 0.2);
         transition: all 0.3s ease;
         width: 100%;
         margin: 0;
         box-sizing: border-box;
     }

    .content-wrapper:hover {
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
    }

    /* Modern Modal Styles */
    .modern-modal {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        overflow: hidden;
    }

    .modern-modal-header {
        border: none;
        padding: 25px 30px;
        border-radius: 20px 20px 0 0;
        position: relative;
    }

    .error-header {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        color: white;
    }

    .success-header {
        background: linear-gradient(135deg, #00d2d3, #54a0ff);
        color: white;
    }

    .warning-header {
        background: linear-gradient(135deg, #ffa726, #ff9800);
        color: white;
    }

    .modern-modal-close {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        padding: 8px;
        transition: all 0.3s ease;
        filter: brightness(0) invert(1);
    }

    .modern-modal-close:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: rotate(90deg);
    }

    .modern-modal-body {
        padding: 30px;
        background: rgba(255, 255, 255, 0.95);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .modern-modal-footer {
        padding: 20px 30px;
        background: rgba(248, 249, 250, 0.8);
        border: none;
        border-radius: 0 0 20px 20px;
    }

    .modern-divider {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, transparent, #ddd, transparent);
        margin: 20px 0;
    }

    .modern-pre {
        background: rgba(248, 249, 250, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 15px;
        font-family: 'Courier New', monospace;
    }

    /* Modern Button Styles */
    .modern-btn-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .modern-btn-secondary:hover {
        background: linear-gradient(135deg, #495057, #343a40);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
    }

    .modern-btn-success {
        background: linear-gradient(135deg, #00d2d3, #54a0ff);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .modern-btn-success:hover {
        background: linear-gradient(135deg, #0056b3, #004085);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 210, 211, 0.3);
    }

    .modern-btn-warning {
        background: linear-gradient(135deg, #ffa726, #ff9800);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .modern-btn-warning:hover {
        background: linear-gradient(135deg, #ff9800, #f57c00);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 167, 38, 0.3);
    }

    /* Enhanced Card Styles */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
    }

    .card:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

    .card-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        border-radius: 15px 15px 0 0;
        padding: 20px;
        font-weight: 600;
    }

    .card-body {
        padding: 25px;
    }

    /* Enhanced Table Styles */
    .table {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .table thead th {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 15px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: rgba(102, 126, 234, 0.1);
        transform: scale(1.01);
    }

    .table tbody td {
        padding: 15px;
        border-color: rgba(0, 0, 0, 0.05);
        vertical-align: middle;
    }

    /* Enhanced Button Styles */
    .btn {
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #5a6fd8, #6a42a0);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-success {
        background: linear-gradient(135deg, #00d2d3, #54a0ff);
        box-shadow: 0 4px 15px rgba(0, 210, 211, 0.3);
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #00b8b9, #4a90e2);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 210, 211, 0.4);
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    }

    .btn-danger:hover {
        background: linear-gradient(135deg, #ff5252, #e53e3e);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffa726, #ff9800);
        box-shadow: 0 4px 15px rgba(255, 167, 38, 0.3);
    }

    .btn-warning:hover {
        background: linear-gradient(135deg, #ff9800, #f57c00);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 167, 38, 0.4);
    }

    /* Enhanced Form Styles */
    .form-control {
        border: 2px solid rgba(102, 126, 234, 0.2);
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        background: white;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .modern-container {
            padding: 5px;
        }
        
        .content-wrapper {
            padding: 10px;
            border-radius: 15px;
        }
        
        .modern-modal-body {
            padding: 20px;
        }
        
        .modern-modal-header {
            padding: 20px;
        }
    }

    /* Animation for page load */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .content-wrapper {
        animation: fadeInUp 0.6s ease-out;
    }
    </style>
  </body>
</html>