<!doctype html>
<html lang="id">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> | TUKIN SMATAJAYA</title>
  
  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="76x76" href="/public/img/logo-smata.png">
  <link rel="icon" type="image/png" href="/public/img/logo-smata.png">
  <meta name="description" content="TUKIN SMATAJAYA - Sistem Tunjangan Kinerja">
  
  <!-- CSS -->
  <link rel="stylesheet" href="/public/sass/output.css">
  <link rel="stylesheet" href="/public/css/custom-theme.css">
  <link rel="stylesheet" href="/public/css/datatables.min.css">
  <link rel="stylesheet" href="/public/css/dataTables.bootstrap.css">
  <link rel="stylesheet" href="/public/css/layout-styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  
  <!-- jQuery - Must load first -->
  <script src="/public/js/jquery-3.7.1.min.js"></script>
</head>

<body class="modern-body">
  <%- include('../components/navbar.ejs') %>
  
  <div class="page-content-wrapper">
    <%- body %>
  </div>

  <!-- Modals -->
  <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header modal-header-error">
          <h5 class="modal-title" id="errorModalLabel"><i class="bi bi-exclamation-triangle-fill me-2"></i>Error</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="errorMessage"></div>
          <div id="errorDetails" class="mt-3" style="display:none">
            <hr><h6 class="text-muted">Details:</h6>
            <pre class="error-details-pre"></pre>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header modal-header-success">
          <h5 class="modal-title" id="successModalLabel"><i class="bi bi-check-circle-fill me-2"></i>Success</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body"><div id="successMessage"></div></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="warningModal" tabindex="-1" aria-labelledby="warningModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header modal-header-warning">
          <h5 class="modal-title" id="warningModalLabel"><i class="bi bi-exclamation-triangle-fill me-2"></i>Warning</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body"><div id="warningMessage"></div></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-warning" data-bs-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/public/dist/js/bootstrap.js"></script>
  <script src="/public/js/toast.js"></script>
  <script src="/public/js/datatables.min.js"></script>
  <script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.js"></script>
  
  <script>
    // Modal functions
    function showErrorModal(message, details = null) {
      if (!message) return;
      document.getElementById('errorMessage').innerHTML = message;
      const detailsEl = document.getElementById('errorDetails');
      if (details) {
        detailsEl.style.display = 'block';
        detailsEl.querySelector('pre').textContent = details;
      } else {
        detailsEl.style.display = 'none';
      }
      new bootstrap.Modal(document.getElementById('errorModal')).show();
    }

    function showSuccessModal(message) {
      document.getElementById('successMessage').innerHTML = message;
      new bootstrap.Modal(document.getElementById('successModal')).show();
    }

    function showWarningModal(message) {
      document.getElementById('warningMessage').innerHTML = message;
      new bootstrap.Modal(document.getElementById('warningModal')).show();
    }

    // Flash messages
    document.addEventListener('DOMContentLoaded', function() {
      <% if (typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
        showToast(<%= JSON.stringify(messages.error[0]) %>, 'error');
      <% } %>
      <% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
        showToast(<%= JSON.stringify(messages.success[0]) %>, 'success');
      <% } %>
      <% if (typeof messages !== 'undefined' && messages.warning && messages.warning.length > 0) { %>
        showToast(<%= JSON.stringify(messages.warning[0]) %>, 'warning');
      <% } %>
    });
  </script>

  <style>
    /* Critical Layout Styles */
    *,*::before,*::after { box-sizing: border-box; }
    
    .modern-body {
      background: #f8fafc;
      min-height: 100vh;
      font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      color: #1e293b;
    }

    .page-content-wrapper {
      margin-left: 260px;
      margin-top: 64px;
      padding: 24px;
      transition: margin-left 0.3s ease;
      min-height: calc(100vh - 64px);
    }

    body.sidebar-minimized .page-content-wrapper {
      margin-left: 72px;
    }

    @media (max-width: 768px) {
      .page-content-wrapper {
        margin-left: 0;
        margin-top: 64px;
        padding: 16px;
      }
    }

    /* Modal Header Variants */
    .modal-header-error {
      background: #fef2f2;
      border-bottom: 1px solid #fecaca;
      color: #dc2626;
    }

    .modal-header-success {
      background: #f0fdf4;
      border-bottom: 1px solid #bbf7d0;
      color: #16a34a;
    }

    .modal-header-warning {
      background: #fffbeb;
      border-bottom: 1px solid #fde68a;
      color: #d97706;
    }

    .error-details-pre {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      padding: 12px;
      font-family: 'Consolas', 'Monaco', monospace;
      font-size: 0.8rem;
      color: #64748b;
      overflow-x: auto;
    }
  </style>
</body>
</html>
